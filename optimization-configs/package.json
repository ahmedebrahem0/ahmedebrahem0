{
  "name": "optimized-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-virtual": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.15.0",
    "axios": "^1.5.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "lodash-es": "^4.17.21",
    "web-vitals": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.5",
    "rollup-plugin-visualizer": "^5.9.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "compression-webpack-plugin": "^10.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "image-webpack-loader": "^8.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "lighthouse": "^11.0.0",
    "gzip-size-cli": "^5.1.0",
    "typescript": "^5.0.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "cssnano": "^6.0.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:webpack": "webpack --mode=production",
    "dev:webpack": "webpack serve --mode=development",
    
    "analyze": "ANALYZE=true npm run build",
    "analyze:webpack": "ANALYZE=true npm run build:webpack",
    "bundle-size": "npm run build && gzip-size build/assets/*.js build/assets/*.css",
    
    "perf": "npm run build && npm run lighthouse",
    "lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./reports/lighthouse-report.html --chrome-flags='--headless --no-sandbox'",
    "lighthouse:ci": "lighthouse http://localhost:4173 --output json --output-path ./reports/lighthouse-ci.json --chrome-flags='--headless --no-sandbox' --quiet",
    
    "test:perf": "npm run build && npm run lighthouse:ci && node scripts/performance-check.js",
    "monitor:perf": "node scripts/performance-monitor.js",
    
    "optimize:images": "node scripts/optimize-images.js",
    "preload:critical": "node scripts/generate-preload.js",
    
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    
    "clean": "rm -rf dist build node_modules/.cache",
    "prebuild": "npm run clean",
    "postbuild": "npm run bundle-size"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "./src/polyfills.js"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-no-bind": ["warn", { "ignoreDOMComponents": false }],
      "react/display-name": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}